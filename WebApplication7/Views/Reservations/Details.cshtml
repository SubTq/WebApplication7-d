@model WebApplication7.Models.Property

@{
    ViewData["Title"] = "Property Details";
}

<h2>Property</h2>

<div>
    <h4>Property</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Address
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            FirstName
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OwnerUser.FirstName)
        </dd>
    </dl>
</div>

<div>
    @if (User.Identity.Name != Model.OwnerUser.FirstName)
    {
        <a asp-action="Create" asp-controller="Reservations" asp-route-propertyId="@Model.PropertyId" class="btn btn-primary">Add Reservation</a>
    }
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
