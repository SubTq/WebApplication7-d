@model WebApplication7.Models.Reservation

@{
    ViewData["Title"] = "Manage Reservation";
}

<h2>Manage Reservation</h2>

<div class="row">
    <div class="col-md-6">
        <!-- Formularz zarządzania rezerwacją -->
        <form asp-action="ManageReservation" asp-controller="Reservations" method="post">
            <input type="hidden" asp-for="ReservationId" />

            <div class="form-group">
                <label>Property Address</label>
                <input class="form-control" value="@Model.Property?.Address" disabled />
            </div>

            <div class="form-group">
                <label>Start Date</label>
                <input class="form-control" value="@Model.StartDate.ToShortDateString()" disabled />
            </div>

            <div class="form-group">
                <label>End Date</label>
                <input class="form-control" value="@Model.EndDate.ToShortDateString()" disabled />
            </div>

            <div class="form-group">
                <label>Status</label>
                <select name="status" class="form-control">
                    <option value="Confirmed" selected="@(Model.Status == "Confirmed" ? "selected" : null)">Confirmed</option>
                    <option value="Cancelled" selected="@(Model.Status == "Cancelled" ? "selected" : null)">Cancelled</option>
                </select>
            </div>



            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>

    <div class="col-md-6">
        <!-- Informacje o najemcy -->
        <div class="card mb-4">
            <div class="card-header">
                Tenant Information
            </div>
            <div class="card-body">
                <p><strong>Name:</strong> @Model.User?.FirstName @Model.User?.LastName</p>
                <p><strong>Email:</strong> @Model.User?.Email</p>
                <p><strong>Contact Number:</strong> @Model.User?.ContactNumber</p>
            </div>
        </div>

        <!-- Notatka od najmującego -->
        <div class="card">
            <div class="card-header">
                Note from Tenant
            </div>
            <div class="card-body">
                <p>@(string.IsNullOrEmpty(Model.OwnerNote) ? "No note provided." : Model.OwnerNote)</p>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="MyProperties" asp-controller="Properties" class="btn btn-secondary">Back to My Properties</a>
</div>
