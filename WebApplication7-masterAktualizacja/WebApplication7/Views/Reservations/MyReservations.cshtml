@model IEnumerable<WebApplication7.Models.Reservation>

@{
    ViewData["Title"] = "My Reservations";
    int totalPages = ViewData["TotalPages"] as int? ?? 1;
    int currentPage = ViewData["CurrentPage"] as int? ?? 1;
}

<h2>My Reservations</h2>

<table class="table">
    <thead>
        <tr>
            <th>Property Address</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Property.Address</td>
                <td>@item.StartDate.ToShortDateString()</td>
                <td>@item.EndDate.ToShortDateString()</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ReservationId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ReservationId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ReservationId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination">
    @if (currentPage > 1)
    {
        <a asp-action="MyReservations" asp-route-pageNumber="@(currentPage - 1)">Previous</a>
    }

    @for (int i = 1; i <= totalPages; i++)
    {
        if (i == currentPage)
        {
            <span>@i</span>
        }
        else
        {
            <a asp-action="MyReservations" asp-route-pageNumber="@i">@i</a>
        }
    }

    @if (currentPage < totalPages)
    {
        <a asp-action="MyReservations" asp-route-pageNumber="@(currentPage + 1)">Next</a>
    }
</div>
