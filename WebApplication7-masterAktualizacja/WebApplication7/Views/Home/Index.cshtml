@model IEnumerable<WebApplication7.Models.Property>
@{
    ViewData["Title"] = "Home Page1";
}

<div class="text-center py-4">
    <h1>Welcome to the Rental Management System</h1>
</div>

<div class="search-container">
    <input type="text" id="searchString" placeholder="Wpisz adres..." class="search-box" />
</div>

<h2 class="text-center py-3">Properties for Rent</h2>
<div class="row" id="propertiesList">
    @foreach (var property in Model)
    {
        <div class="col-md-4 d-flex align-items-stretch mb-4">
            <a href="@Url.Action("Details", "Properties", new { id = property.PropertyId })" class="card-link w-100">
                <div class="card h-100">
                    <img class="card-img-top" src="@property.ImageUrl" alt="Property image">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title property-address">@property.Address</h5>
                        <p class="card-text flex-grow-1">@property.Description</p>
                        <p class="card-text"><strong>Price:</strong> @property.Price.ToString("C")</p>
                    </div>
                </div>
            </a>
        </div>
    }
</div>

<script>
    document.getElementById("searchString").addEventListener("input", function () {
        let filter = this.value.toLowerCase();
        let cards = document.querySelectorAll(".property-card");

        cards.forEach(card => {
            let address = card.querySelector(".property-address").innerText.toLowerCase();
            if (address.includes(filter)) {
                card.style.display = "block";
            } else {
                card.style.display = "none";
            }
        });
    });
</script>

<style>
    .search-container {
        text-align: center;
        margin: 20px 0;
    }

    .search-box {
        width: 50%;
        padding: 10px;
        font-size: 16px;
        border-radius: 25px;
        border: 1px solid #ccc;
        outline: none;
    }

        .search-box:focus {
            border-color: #007bff;
        }

    .property-card {
        display: flex;
        flex-direction: column;
        justify-content: stretch;
    }

    .card {
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .card-body {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .card-link {
        text-decoration: none;
        color: inherit;
        height: 100%;
    }

        .card-link:hover .card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transform: scale(1.02);
            transition: all 0.3s ease-in-out;
        }
</style>
