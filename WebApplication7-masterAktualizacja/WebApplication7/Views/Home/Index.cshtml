@model IEnumerable<WebApplication7.Models.Property>
@{
    ViewData["Title"] = "House for Rent";
}

<div class="text-center py-4">
    <h1>Welcome to the Rental Management System</h1>
</div>

<div class="search-container">
    <input type="text" id="searchString" placeholder="Wpisz adres..." class="search-box" />
</div>

<div class="row" id="propertiesList">
    @foreach (var property in Model)
    {
        <div class="col-md-4 d-flex align-items-stretch mb-4 property-card">
            <a href="@Url.Action("Details", "Properties", new { id = property.PropertyId })" class="card-link w-100">
                <div class="card h-100">
                    <img class="card-img-top" src="@property.ImageUrl" alt="Property image">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title property-address">@property.Address</h5>
                        <p class="card-text flex-grow-1">@property.Description</p>
                        <p class="card-text"><strong>Price:</strong> @property.Price.ToString("C")</p>
                    </div>
                </div>
            </a>
        </div>
    }
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#searchString").on("input", function () {
            let searchString = $(this).val(); // Pobranie wartości wpisanej przez użytkownika

            $.ajax({
                url: '@Url.Action("SearchProperties", "Home")',
                data: { searchString: searchString },
                success: function (data) {
                    // Czyścimy poprzednie wyniki
                    $("#propertiesList").empty();

                    // Przechodzimy przez zwrócone wyniki i tworzymy nowe karty mieszkań
                    data.forEach(function (property) {
                        let card = `
                                <div class="col-md-4 d-flex align-items-stretch mb-4 property-card">
                                    <a href="/Properties/Details/${property.propertyId}" class="card-link w-100">
                                        <div class="card h-100">
                                            <img class="card-img-top" src="${property.imageUrl}" alt="Property image">
                                            <div class="card-body d-flex flex-column">
                                                <h5 class="card-title property-address">${property.address}</h5>
                                                <p class="card-text flex-grow-1">${property.description}</p>
                                                <p class="card-text"><strong>Price:</strong> ${property.price.toLocaleString('pl-PL', { style: 'currency', currency: 'PLN' })}</p>
                                            </div>
                                        </div>
                                    </a>
                                </div>`;
                        $("#propertiesList").append(card);
                    });
                },
                error: function () {
                    console.log("Błąd przy pobieraniu wyników wyszukiwania.");
                }
            });
        });
    });
</script>

<style>
    .search-container {
        text-align: center;
        margin: 20px 0;
    }

    .search-box {
        width: 50%;
        padding: 10px;
        font-size: 16px;
        border-radius: 25px;
        border: 1px solid #ccc;
        outline: none;
    }

        .search-box:focus {
            border-color: #007bff;
        }

    .property-card {
        display: flex;
        flex-direction: column;
        justify-content: stretch;
    }

    .card {
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .card-body {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .card-link {
        text-decoration: none;
        color: inherit;
        height: 100%;
    }

        .card-link:hover .card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transform: scale(1.02);
            transition: all 0.3s ease-in-out;
        }
</style>
